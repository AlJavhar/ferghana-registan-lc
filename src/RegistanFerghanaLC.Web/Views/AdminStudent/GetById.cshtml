@using RegistanFerghanaLC.Service.ViewModels.StudentViewModels;
@model StudentViewModel;

<div class="card w-lg-500px p-10 mt-20 mb-20 shadow1" style="margin-left:auto; margin-right: auto; box-shadow: 0px 0px 15px gray;">
    
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                @if (String.IsNullOrEmpty(Model.Image))
                {
                    @if (Model.LastName.EndsWith("a"))
                    {
                        <img class="rounded-circle mt-5" width="150px" src="~/media/avatars/150-7.jpg"class="w-100">
                    }
                    else
                    {
                        <img class="rounded-circle mt-5" width="150px" src="~/media/avatars/150-2.jpg"  class="w-100" />
                    }
                }
                else
                {
                    <img class="rounded-circle mt-5" width="150px" src="~/@Model.Image" class="w-100">
                }
                <span class="font-weight-bold">@Model.FirstName @Model.LastName</span>
                <span class="text-black-50">@Model.PhoneNumber</span><span> </span>
            </div>
        </div>
        <div class="col-md-6 border-right">
            <div class="d-flex justify-content-between align-items-center mb-3" style="align-content: center; margin-block-end:1%">
                <h4 class="text-right">Student Profile</h4>
            </div>
            <div class="col-md-12">
                <label class="labels">First Name</label>
                <span class="fw-bold px-sm-0 text-black-500">@Model.FirstName</span>

            </div>
            <div class="col-md-12">
                <label class="labels">Last Name</label>
                <span class="fw-bold px-sm-0 text-black-500">@Model.LastName</span>
            </div>
            <div class="col-md-12">
                <label class="labels">Mobile Number</label>
                <span class="fw-bold px-sm-0 text-black-500">@Model.PhoneNumber</span>
            </div>
            <div class="col-md-12">
                <label class="labels">Subject</label>
                @if(Model.Subjects?.Count()!=0)
                {
                    <span class="fw-bold px-sm-0 text-black-500">
                        @String.Join(", ", @Model.Subjects)
                    </span>
                }
                else
                {
                    <span class="fw-bold px-sm-0 text-black-500">
                        No subject yet.
                    </span>
                }
            </div>
            <div class="col-md-12">
                <label class="labels">Weekly Limit</label>
                <span class="fw-bold px-sm-0 text-black-500">@Model.WeeklyLimit</span>
            </div>
            <div class="col-md-12">
                <label class="labels">Level</label>
                <span class="fw-bold px-sm-0 text-black-500">@Model.StudentLevel</span>
            </div>
            <div class="col-md-12">
                <label class="labels">Birth date</label>
                <span class="fw-bold px-sm-0 text-black-500">@Model.BirthDate</span>
            </div>
            <div class="col-md-14">
                <label class="labels">Creation date</label>
                <span class="fw-bold px-sm-0 text-black-500">@Model.CreatedAt</span>
            </div>
            
        
        </div>
        <a asp-area="" asp-controller="adminstudent" asp-action="index" class="btn btn-secondary fw-semibold me-3">Back</a>
    </div>
</div>