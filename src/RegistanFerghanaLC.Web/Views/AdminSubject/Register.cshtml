@using RegistanFerghanaLC.Service.Dtos.Subjects;
@model SubjectCreateDto;

<div class="w-lg-600px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
    <form asp-controller="AdminSubject" asp-action="RegisterSubject" method="post" novalidate="novalidate" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" id="kt_sign_up_form">
        <div class="mb-8 text-center">
            <h1 class="text-registan mb-3">
                Create Subject
            </h1>
        </div>
        <div class="fv-row mb-15 fv-plugins-icon-container">
            <label class="form-label fw-bold text-dark fs-6">Subject Name</label>
            <input type="text" asp-for="Name" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="text-center mt-3 mb-2">
            <a asp-controller="home" asp-action="index" class="btn btn-secondary fw-semibold me-3">Cancel</a>
            <button type="submit" id="kt_sign_up_submit" class="btn btn-lg btn-registan">
                <span class="indicator-label">
                    Submit
                </span>
            </button>
        </div>
    </form>
</div>
