        <div class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <!--begin::Table head-->
                    <thead>
                        <!--begin::Table row-->
                        <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                            <th class="w-10px pe-2" style="width: 29.9px;">Id</th>
                            <th class="min-w-200px sorting" style="width: 265.638px;">Teacher</th>
                            <th class="text-end min-w-100px" style="width: 134.337px;">PHONE NUMBER</th>
                            <th class="text-end min-w-70px" style="width: 124.425px;">PART OF DAY</th>
                            <th class="text-end min-w-100px" style="width: 134.337px;">LEVEL</th>
                            <th class="text-end min-w-100px" style="width: 134.337px;">SUBJECT</th>
                            <th class="text-end min-w-100px" style="width: 130.337px;">WORK DAYS</th>
