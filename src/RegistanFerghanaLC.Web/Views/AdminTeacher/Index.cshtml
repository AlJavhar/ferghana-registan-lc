                            <th class="text-end min-w-70px" style="width: 130.938px;">Actions</th>
                        </tr>
                        <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody class="fw-semibold text-gray-600">
                        @foreach (var teacher in Model)
                        {
                            <tr class="tr-shadow text-dark">
                                <td class="text-end pe-0">
                                    <span class="fw-bold">@teacher.Id</span>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <a href="/ceres-html-pro/?page=apps/ecommerce/catalog/edit-product" class="symbol symbol-50px">
                                            <span class="symbol-label" style="background-image:url(/ceres-html-pro/assets/media//stock/ecommerce/9.gif);"></span>
                                        </a>

                                        <div class="ms-5">
                                            <a class="text-gray-800 text-hover-primary fs-5 fw-bold">@teacher.FirstName @teacher.LastName</a>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-end pe-0">
                                    <span class="fw-bold text-gray-800 ms-3">@teacher.PhoneNumber</span>
                                </td>

                                <td class="text-end pe-0">@teacher.PartOfDay</td>

                                <td class="text-end pe-0">
                                    <span class="fw-bold">@teacher.TeacherLevel</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <!--end::Table body-->
                </table>
