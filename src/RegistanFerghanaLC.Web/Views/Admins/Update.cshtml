@using RegistanFerghanaLC.Service.Dtos.Admins;
@model AdminUpdateDto

<div class="d-flex flex-column-fluid align-items-start  container-xxl">
    <div class="content flex-row-fluid">
        <div class="d-flex flex-column flex-xl-row">
            <div class="flex-column flex-lg-row-auto w-100 w-xl-300px mb-10">
                <div class="card card-flush" data-kt-sticky="true" data-kt-sticky-name="account-navbar" data-kt-sticky-offset="{default: false, xl: '80px'}" data-kt-sticky-height-offset="50" data-kt-sticky-width="{lg: '250px', xl: '300px'}" data-kt-sticky-animation="false" data-kt-sticky-left="auto" data-kt-sticky-top="90px" data-kt-sticky-zindex="95">
                    <div class="card-header justify-content-end">
                    </div>
                    <div class="card-body pt-0 p-10">
                        <div class="d-flex flex-center flex-column mb-10">
                            <div class="symbol mb-3 symbol-100px symbol-circle">
                                @if (String.IsNullOrWhiteSpace(Model.ImagePath))
                                {
                                    <img src="~/media/avatars/150-26.jpg"/>
                                }
                                else
                                {
                                    <img src="~/@Model.ImagePath" />
                                }
                            </div>
                            <a class="fs-2 text-gray-800 text-hover-primary fw-bold mb-1">
                                @Model.FirstName @Model.LastName
                            </a>
                            <div class="fs-6 fw-semibold text-gray-400 mb-2">
                                @Model.PhoneNumber
                            </div>
                        </div>
                        <ul class="menu menu-column menu-pill menu-title-gray-700 menu-bullet-gray-300 menu-state-bg menu-state-bullet-primary fw-bold fs-5 mb-10">
                            <li class="menu-item mb-1">
                                <a class="menu-link px-6 py-4 @(ViewBag.Tab == 1 ? "active":"")">
                                    <span class="menu-bullet"><span class="bullet"></span></span>
                                    <span class="menu-title">
                                        Settings
                                    </span>
                                </a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
            <div class="flex-lg-row-fluid ms-lg-10">
                <div class="card mb-5 mb-xl-10">
                    <div class="card-header border-0 cursor-pointer" role="button">
                        <div class="card-title m-0">
                            <h3 class="fw-bold m-0">Profile Details</h3>
                        </div>
                    </div>
                    <div class="collapse show">
                        <form asp-controller="admins" asp-action="update" method="post" asp-route-adminId="@ViewBag.adminId" enctype="multipart/form-data" class="form fv-plugins-bootstrap5 fv-plugins-framework">
                            <div class="card-body border-top p-9">
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label fw-semibold fs-6">Avatar</label>
                                    <div class="col-lg-8">
                                        <div class="symbol mb-3">
                                            @if (String.IsNullOrEmpty(Model.ImagePath))
                                            {
                                                <img class="w-125px h-125px" src="~/media/avatars/150-26.jpg" />
                                            }
                                            else
                                            {
                                                <img class="w-125px h-125px" src="~/@Model.ImagePath" />
                                            }
                                            <div class="btn btn-icon btn-circle btn-active-color-dark w-25px h-25px bg-body shadow" data-bs-toggle="tooltip" data-bs-original-title="Change avatar">
                                                <label>
                                                    <input type="file" asp-for=Image class="form-control form-control-solid" style="display:none" />
                                                    <span class="svg-icon svg-icon-muted">
                                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path opacity="0.3" d="M21.4 8.35303L19.241 10.511L13.485 4.755L15.643 2.59595C16.0248 2.21423 16.5426 1.99988 17.0825 1.99988C17.6224 1.99988 18.1402 2.21423 18.522 2.59595L21.4 5.474C21.7817 5.85581 21.9962 6.37355 21.9962 6.91345C21.9962 7.45335 21.7817 7.97122 21.4 8.35303ZM3.68699 21.932L9.88699 19.865L4.13099 14.109L2.06399 20.309C1.98815 20.5354 1.97703 20.7787 2.03189 21.0111C2.08674 21.2436 2.2054 21.4561 2.37449 21.6248C2.54359 21.7934 2.75641 21.9115 2.989 21.9658C3.22158 22.0201 3.4647 22.0084 3.69099 21.932H3.68699Z" fill="currentColor" />
                                                            <path d="M5.574 21.3L3.692 21.928C3.46591 22.0032 3.22334 22.0141 2.99144 21.9594C2.75954 21.9046 2.54744 21.7864 2.3789 21.6179C2.21036 21.4495 2.09202 21.2375 2.03711 21.0056C1.9822 20.7737 1.99289 20.5312 2.06799 20.3051L2.696 18.422L5.574 21.3ZM4.13499 14.105L9.891 19.861L19.245 10.507L13.489 4.75098L4.13499 14.105Z" fill="currentColor" />
                                                        </svg>
                                                    </span>
                                                    <a asp-controller="admins" asp-action="updateImage" asp-route-formFile="@Model.Image">
                                                    </a>
                                                </label>
                                                <span asp-validation-for="Image" class="text-danger"></span>
                                            </div>

                                            <button asp-controller="admins" asp-action="deleteImage" method="post" class="btn btn-icon btn-circle btn-active-color-dark w-25px h-25px bg-body shadow" data-bs-toggle="tooltip" data-bs-original-title="Remove avatar">
                                                <span class="svg-icon svg-icon-muted">
                                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <path opacity="0.3" d="M6.7 19.4L5.3 18C4.9 17.6 4.9 17 5.3 16.6L16.6 5.3C17 4.9 17.6 4.9 18 5.3L19.4 6.7C19.8 7.1 19.8 7.7 19.4 8.1L8.1 19.4C7.8 19.8 7.1 19.8 6.7 19.4Z" fill="currentColor" />
                                                        <path d="M19.5 18L18.1 19.4C17.7 19.8 17.1 19.8 16.7 19.4L5.40001 8.1C5.00001 7.7 5.00001 7.1 5.40001 6.7L6.80001 5.3C7.20001 4.9 7.80001 4.9 8.20001 5.3L19.5 16.6C19.9 16.9 19.9 17.6 19.5 18Z" fill="currentColor" />
                                                    </svg>
                                                </span>
                                            </button>
                                        </div>
                                        <div class="form-text">Allowed file types:  png, jpg, jpeg</div>
                                    </div>
                                </div>
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">First Name</label>
                                    <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                        <input type="text" asp-for="FirstName" placeholder="FirstName" class="form-control form-control-lg form-control-solid">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Last Name</label>
                                    <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                        <input type="text" asp-for="LastName" placeholder="LastName" class="form-control form-control-lg form-control-solid">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Birth Date</label>
                                    <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                        <input type="date" asp-for="BirthDate" placeholder="BirthDate" class="form-control form-control-lg form-control-solid">
                                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label fw-semibold fs-6">
                                        <span class="required">Address</span>
                                    </label>
                                    <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                        <input type="tel" asp-for="Address" class="form-control form-control-lg form-control-solid">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label fw-semibold fs-6">
                                        <span class="required">Phone Number</span>
                                    </label>
                                    <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                        <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg form-control-solid" placeholder="+998yyxxxzzzz">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <a asp-controller="home" asp-action="index" class="btn btn-light btn-active-light-dark me-2">Discard</a>
                                <button type="submit" class="btn btn-registan">Save Changes</button>
                            </div>
                            <input type="hidden">
                        </form>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>